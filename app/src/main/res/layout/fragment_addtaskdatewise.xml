
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/frameaddnewselectdate"
    tools:context="com.example.laurel1.timetracker.Addtaskdatewise">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/squareborder"
        android:layout_alignParentStart="true">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_marginTop="8dp"
            android:id="@+id/client_nm_sd"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_marginTop="30dp"
            android:id="@+id/project_nm_sd"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:layout_marginTop="30dp"
            android:hint="Task"
            android:textSize="15sp"
            android:paddingLeft="16dp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:id="@+id/task_sd" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:layout_marginTop="30dp"
            android:hint="Hours"
            android:inputType="number"
            android:paddingLeft="16dp"
            android:textSize="15sp"
            android:maxLength="2"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:id="@+id/hours_sd" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SUBMIT"
            android:background="#D0021B"
            android:fontFamily="sans-serif-medium"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:id="@+id/btnsub_sd"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <include layout="@layout/footer"
        android:id="@+id/include" />
</FrameLayout>
